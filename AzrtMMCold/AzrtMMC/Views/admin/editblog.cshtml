@model AzrtMMC.Models.Blog
@{
    ViewBag.Title = "Blog düzəliş";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main content -->
<div class="content-wrapper">
    <!-- Content area -->
    <div class="content">
        <!-- Basic layout-->
        <form action="/admin/editblog/@Model.Id" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">Blog Düzəliş</h5>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                <div class="panel-body">
                    <div class="form-group">
                        <label>Başlıq:</label>
                        <input type="text" class="form-control" name="Title" value="@Model.Title">
                    </div>
                    <div class="form-group">
                        <label>Şəkil:</label>
                        <input type="file" class="file-styled" name="file" accept=".jpg,.png,.gif">
                        <span class="help-block">Qəbul edilən formatlar: gif, png, jpg. Şəklin maksimum ölçüsü 2Mb olmalıdır.</span>
                        <img class="img-thumbnail" src="~/wwwroot/blog/@Model.ImagePath" width="300" />
                    </div>

                    <div class="form-group">
                        <label>Məzmun:</label>
                        <textarea name="description" id="editor-full" rows="4" cols="4">@Model.Description</textarea>
                    </div>

                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">Dəyiş</button>
                    </div>
                </div>
            </div>
        </form>
        <!-- /basic layout -->
    </div>
</div>


<script>
    CKEDITOR.replace("editor-full");
</script>