@model IEnumerable<AzrtMMC.Models.SubCategory>
@{
    ViewBag.Title = "Alt Kateqoriyalar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main content -->
<div class="content-wrapper">
    <!-- Content area -->
    <div class="content">
        <a href="/admin/newsubcategory" class="btn btn-info">Yeni Alt Kateqoriya</a>
        @if (TempData["Success"] != null)
        {
            <div class="row">
                <div class="col-12" style="margin-top:20px;"><div class="alert alert-info">@TempData["Success"]</div></div>
            </div>
        }

        <table class="table datatable-pagination">
            <thead>
                <tr>
                    <th class="text-center">Alt Kateqoriya adı</th>
                    <th colspan="3" class="text-center">Alt Kateqoriya Açıqlama</th>
                    <th colspan="2" class="text-center">Əməliyyatlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @if (item.Description.Length > 41)
                            {
                                @Html.Raw(item.Description.Substring(0, 40));<span>...</span>
                            }
                            else
                            {
                                @Html.Raw(item.Description);
                            }
                        </td>
                        <td></td>
                        <td></td>
                        <td>
                            <a href="/admin/editsubcategory/@item.Id" class="btn btn-primary btn-sm">Düzəliş</a>
                        </td>
                        <td class="text-center">
                            <a href="/admin/deletesubcategory/@item.Id" class="btn btn-danger btn-sm">Sil</a>

                        </td>
                    </tr>
}
            </tbody>
        </table>
    </div>
</div>


